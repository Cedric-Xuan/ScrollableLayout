<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

        <com.example.xyz.scrollablelayout2.ScrollableLayout
            android:id="@+id/scrollable_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.xyz.scrollablelayout2.ScrollableLayout
                android:id="@+id/scrollable_inner_layout"
                android:layout_width="match_parent"
                android:layout_height="450dp">

                <TextView
                    android:id="@+id/head_test_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorAccent"/>

                <WebView
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="650dp"
                    android:scrollbars="vertical"/>

            </com.example.xyz.scrollablelayout2.ScrollableLayout>


            <!--<WebView-->
                <!--android:id="@+id/list_web_view"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="650dp"-->
                <!--android:scrollbars="vertical"/>-->

            <android.support.design.widget.TabLayout
                android:id="@+id/toolbar_tab"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:background="#ffffff"
                android:fillViewport="false"
                app:tabMode="fixed"
                app:tabPaddingTop="0dp"
                app:tabPaddingStart="0dp"
                app:tabPaddingEnd="0dp"
                app:tabIndicatorColor="#809fd8"
                app:tabIndicatorHeight="1.5dp"
                app:tabSelectedTextColor="#809fd8"
                app:tabTextColor="#808080"
                 />

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="570dp" />


    </com.example.xyz.scrollablelayout2.ScrollableLayout>





</LinearLayout>
